{
  "name": "marco-portfolio",
  "version": "1.0.0",
  "description": "Portfolio profesional de Marco David Toledo Canna - Full Stack Developer",
  "main": "index.html",
  "scripts": {
    "dev": "npx live-server --port=3000 --host=localhost --open=/",
    "build": "echo 'Building static files...' && echo 'Build complete!'",
    "preview": "npx serve -s . -l 3000",
    "deploy": "vercel --prod",
    "lint:css": "stylelint styles.css --fix",
    "lint:js": "eslint script.js --fix",
    "optimize": "npm run optimize:images && npm run optimize:css && npm run optimize:js",
    "optimize:images": "echo 'Image optimization would go here'",
    "optimize:css": "postcss styles.css -o styles.min.css --use autoprefixer cssnano",
    "optimize:js": "terser script.js -o script.min.js --compress --mangle"
  },
  "keywords": [
    "portfolio",
    "full-stack",
    "developer",
    "laravel",
    "nestjs",
    "flutter",
    "web-development",
    "marco-toledo"
  ],
