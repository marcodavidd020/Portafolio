  "homepage": "https://marco-portfolio.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcodavidd020/portfolio.git"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "eslint": "^8.55.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "serve": "^14.2.1",
    "stylelint": "^15.11.0",
