{
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "headers": [
    {
      "source": "/(.*\\.(?:jpg|jpeg|png|gif|ico|svg))",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/*"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(?:js|css))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.pdf)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/pdf"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/skills",
      "destination": "/skills.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 